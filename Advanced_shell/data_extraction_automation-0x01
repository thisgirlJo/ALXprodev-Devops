#!/bin/bash

# Extract data from JSON using jq
name=$(jq -r '.name' data.json)
height_dm=$(jq -r '.height' data.json)   # height in decimeters
weight_hg=$(jq -r '.weight' data.json)   # weight in hectograms
type=$(jq -r '.types[0].type.name' data.json)

# Convert height from decimeters to meters using awk with 1 decimal place
height=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")

# Convert weight from hectograms to kilograms using awk (integer)
weight=$(awk "BEGIN {printf \"%d\", $weight_hg / 10}")

# Capitalize first letter of name and type using sed
name_cap=$(echo "$name" | sed 's/.*/\u&/')
type_cap=$(echo "$type" | sed 's/.*/\u&/')

# Format and print the final output
echo "${name_cap} is of type ${type_cap}, weighs ${weight}kg, and is ${height}m tall."
