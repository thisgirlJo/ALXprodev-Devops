#!/bin/bash

#Objective: Automate the process of making API requests to the PokÃ©mon API and saving the results to a file

OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# API endpoint for Pikachu
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$URL")

# Extract the HTTP status code (the last 3 characters)
status_code="${response: -3}"

# Check if request was successful
if [ "$status_code" -ne 200 ]; then
    echo "[$(date)] Error: Failed to fetch data for Pikachu. Status code: $status_code" >> "$ERROR_FILE"
    exit 1
else
    echo "Data successfully saved to $OUTPUT_FILE"
fi